<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@mipmap/qq9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.sinothk.media.imageView.shapeImageView.CircleImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:src="@mipmap/qq9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:orientation="vertical">

                    <com.sinothk.media.imageView.shapeImageView.CircleImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:src="@mipmap/qq9"
                        app:borderColor="#fff"
                        app:borderWidths="5dp"
                        app:hoverColor="#22000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.sinothk.media.imageView.shapeImageView.RoundImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:src="@mipmap/qq9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.sinothk.media.imageView.shapeImageView.RoundImageView
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:src="@mipmap/qq9"
                        app:borderColor="#fff"
                        android:scaleType="centerCrop"
                        app:borderRadius="60dp"
                        app:borderWidths="5dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
